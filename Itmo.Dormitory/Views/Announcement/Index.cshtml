@model List<Announcement>
@{
    ViewData["Title"] = "Announcements";
}
<head>
    <script>setActiveNavItem('announcements')</script>
</head>

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Announcement.css" />
    <script src="~/js/Announcement.js"></script>
</head>
<body>
    <main>
        <section class="announcements">
            <ul class="announcements__list">
                <li class="announcements__item box-shadow">
                    <article class="announcement">
                        <div class="announcement__description">
                            <h3 class="announcement__title">$__title__$</h3>
                            <p class="announcement__content">$__content__$</p>
                            <p class="announcement__date">$__creationTime__$</p>
                        </div>
                    </article>
                </li>
            </ul>
        </section>
        <section class="filter-container">
            <div class="textbox-container">
                <div class="textbox">
                    <img>
                    <input value="Search" type="search">
                </div>

            </div>

        </section>
        </main>
    <script>
        updateAnnouncements(@Html.Raw(Json.Serialize(Model)));
    </script>
</body>
</html>
